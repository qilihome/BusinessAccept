<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableRow android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="业务受理部门" />

        <Spinner
            android:id="@+id/spinner_matter_depart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:spinnerMode="dialog" />
    </TableRow>

    <TableRow android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="业务受理人" />

        <Spinner
            android:id="@+id/spinner_matter_customer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:spinnerMode="dialog" />
    </TableRow>

    <TableRow android:orientation="horizontal" >

        <Button
            android:id="@+id/button_matter_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="指定后续受理人" />
    </TableRow>

    <TableRow android:orientation="horizontal" 
         android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_matter_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="首页" />

        <Button
            android:id="@+id/button_matter_query_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="业务看板" />

        <Button
            android:id="@+id/button_matter_business_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="修改" />
    </TableRow>

</TableLayout>